#: include src/screens/parse_screen/parse_screen.kv
#: include src/screens/settings_screen/settings_screen.kv
#: include src/screens/add_screen/add_screen.kv


FloatLayout:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'src/assets/icons/bg-icon.jpg'

    ActionBar:
        background_color: 0, 0, 0, 0.3
        pos_hint: {'top':1}

        ActionView:
            use_separator: True

            ActionPrevious:
                font_name: 'Roboto'
                title: 'Birthday scraper'
                with_previous: False
                on_release: app.navigate_to_home()
            ActionButton:
                markup: True
                font_name: 'Roboto'
                text: '[b]добавлять[/b]'
                on_release: app.navigate_to_add()

            ActionButton:
                markup: True
                font_name: 'Roboto'
                text: '[b]настройки[/b]'
                on_release: app.navigate_to_settings()

    ScreenManager:
        id: screen_manager

        ParseScreen:
            id: parse_screen
            name: 'parse_screen'
        AddScreen:
            id: add_screen
            name: 'add_screen'
        SettingsScreen:
            id: settings_screen
            name: 'settings_screen'
