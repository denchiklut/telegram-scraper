<AddScreen>
    name: 'add screen'

    MDBoxLayout:
        spacing: dp(10)
        pos_hint: {'top': 1}
        size_hint_y: 0.9

        ScrollView:
            size_hint_x: None
            width: "320dp"
            do_scroll_x: False

            MDList:
                id: group_list


        MDBoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .5}

            MDLabel:
                size_hint_y: None
                size_hint_x: 1
                height: self.texture_size[1]
                theme_text_color: "Primary"
                halign: 'center'
                text: 'Test'

            Widget