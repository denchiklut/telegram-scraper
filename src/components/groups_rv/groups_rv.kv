<SelectableLabel>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, 0.2) if self.selected else (0.3,0.1,0.2, 0)
        Rectangle:
            size: self.size
            pos: self.pos
    value : ''

    canvas:
        Color:
            rgba: (0, 0, 0, 0.2)
        Rectangle:
            size: self.width, 1
            pos: self.pos
    Label:
        padding_x: '20dp'
        font_name: 'Roboto'
        font_size: 36
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        text: '[b]'+ root.value + '[/b]'
        markup: True
        border: (16, 16, 16, 16)



<GroupsRV>:
    canvas.before:
        Color:
            rgba: (255, 255, 255, 0.5)
        Rectangle:
            size: self.size
            pos: self.pos
    value : ''

    viewclass: 'SelectableLabel'
    scroll_type: ['bars','content']
    scroll_wheel_distance: dp(100)
    bar_width: dp(10)
    background_color: 0, 0, 0, 0.35

    SelectableRecycleBoxLayout:
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True
        default_size: None, dp(56)
        default_size_hint: 1, None
        spacing: 4